<ol reversed class="postlist" style="counter-reset: start-from {{ (weeknotelistCounter or weeknotelist.length) + 1 }}">
{% for weeknote in weeknoteslist | reverse %}
  <li class="postlist-item{% if weeknote.url == url %} postlist-item-active{% endif %}">
    <a href="{{ weeknote.url | url }}" class="postlist-link">{% if weeknote.data.title %}{{ weeknote.data.title }}{% else %}<code>{{ weeknote.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ weeknote.date | htmlDateString }}">{{ weeknote.date | readableDate }}</time>
    {% for tag in weeknote.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
